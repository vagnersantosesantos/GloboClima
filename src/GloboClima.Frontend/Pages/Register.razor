@page "/register"
@using GloboClima.Core.DTOs
@using GloboClima.Frontend.Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Criar Conta - GloboClima</PageTitle>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-header text-center bg-success text-white">
                    <h3><i class="fas fa-globe-americas me-2"></i>GloboClima</h3>
                    <p class="mb-0">Crie sua conta</p>
                </div>
                <div class="card-body p-4">
                    <EditForm Model="registerModel" OnValidSubmit="HandleRegister">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <InputText @bind-Value="registerModel.Email" class="form-control"
                                       placeholder="seu@email.com" />
                            <ValidationMessage For="() => registerModel.Email" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Senha</label>
                            <InputText @bind-Value="registerModel.Password" type="password"
                                       class="form-control" placeholder="Sua senha" />
                            <ValidationMessage For="() => registerModel.Password" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Confirmar Senha</label>
                            <InputText @bind-Value="registerModel.ConfirmPassword" type="password"
                                       class="form-control" placeholder="Confirme sua senha" />
                            <ValidationMessage For="() => registerModel.ConfirmPassword" class="text-danger" />
                        </div>

                        @if (errorMessage != null)
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                @errorMessage
                            </div>
                        }

                        @if (successMessage != null)
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle me-2"></i>
                                @successMessage
                            </div>
                        }

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="fas fa-user-plus me-2"></i>
                                Criar Conta
                            </button>
                        </div>
                    </EditForm>

                    <hr>

                    <div class="text-center">
                        <p class="mb-0">Já tem uma conta?</p>
                        <a href="/login" class="btn btn-outline-success">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Fazer login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterRequest registerModel = new();
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading = false;

    private async Task HandleRegister()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var success = await AuthService.RegisterAsync(
                registerModel.Email,
                registerModel.Password,
                registerModel.ConfirmPassword);

            if (success)
            {
                successMessage = "Conta criada com sucesso! Redirecionando...";
                await Task.Delay(1500);
                Navigation.NavigateTo("/dashboard");
            }
            else
            {
                errorMessage = "Erro ao criar conta. Tente novamente.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao criar conta: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}